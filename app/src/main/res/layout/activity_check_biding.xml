<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Contractor.CheckBidingActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_biding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/accepted_contractor"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp" />

    <Button
        android:id="@+id/accepted_contractor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
        android:text="Accepted Bid" />

    <TextView
        android:id="@+id/txt_bid_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:text="No Bid Yet"
        android:layout_centerInParent="true"
        android:textColor="#DA0303"
        android:fontFamily="@font/alata"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>