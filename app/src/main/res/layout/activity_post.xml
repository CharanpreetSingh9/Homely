<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contractor.PostActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alata"
        android:text="Project Name"
        android:textColor="@color/black"
        android:textSize="16dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/post_projectname"
        android:layout_width="280dp"
        android:hint="Your Project Name.."
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:background="@drawable/reset_background"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alata"

        android:text="Area of Construction"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/post_projectname" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alata"
        android:text="Budget"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/check_with" />

    <EditText
        android:id="@+id/post_budget"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="138dp"
        android:background="@drawable/reset_background"
        android:ems="10"
        android:hint="In CAD"
        android:drawableStart="@drawable/money"
        android:inputType="number"
        android:padding="10dp"
        android:drawablePadding="10dp"

        app:layout_constraintEnd_toEndOf="@+id/post_area"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/post_area"
        app:layout_constraintTop_toBottomOf="@+id/post_area" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alata"
        android:text="Project Location"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/post_budget"
        app:layout_constraintTop_toBottomOf="@+id/post_budget" />

    <EditText
        android:id="@+id/post_location"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/reset_background"
        android:drawableStart="@drawable/placeholder"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Address .."
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/post_budget"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/post_budget"
        app:layout_constraintTop_toBottomOf="@+id/post_budget" />

    <Button
        android:id="@+id/btn_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/post_area"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        android:drawableStart="@drawable/selection"
        android:background="@drawable/reset_background"
        android:ems="10"
        android:hint="In Square Feet"
        android:inputType="number"
        android:padding="10dp"
        android:drawablePadding="10dp"

        app:layout_constraintEnd_toEndOf="@+id/post_projectname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/post_projectname"
        app:layout_constraintTop_toBottomOf="@+id/post_projectname" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alata"
        android:text="Material"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/post_area" />

    <CheckBox
        android:id="@+id/check_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/alata"

        android:text="With Material"
        app:layout_constraintBottom_toBottomOf="@+id/check_without"
        app:layout_constraintEnd_toStartOf="@+id/check_without"
        app:layout_constraintTop_toTopOf="@+id/check_without" />

    <CheckBox
        android:id="@+id/check_without"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="134dp"
        android:layout_toRightOf="@+id/check_with"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="Without Material"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/post_projectname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/alata"

        android:text="End Date"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/post_location" />

    <TextView

        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/reset_background"
        android:drawableStart="@drawable/calendar"
        android:drawablePadding="10dp"
        android:ems="10"

        android:id="@+id/post_date"
        android:hint="DD/MM/YEAR"

        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/post_location"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/post_location"
        app:layout_constraintTop_toBottomOf="@+id/post_location" />

</androidx.constraintlayout.widget.ConstraintLayout>