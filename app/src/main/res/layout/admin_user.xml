<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_fullname"
            android:padding="5dp"
            android:text="Full name : kanishk dubey"

            android:drawablePadding="15dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"

            android:fontFamily="@font/alata"

            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_email"
            android:padding="5dp"
            android:text="E-mail : kahdkahsdkh@mail"

            android:drawablePadding="15dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"

            android:fontFamily="@font/alata"

            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_phone"
            android:padding="5dp"
            android:text="Phone no : 998852455"

            android:drawablePadding="15dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"

            android:fontFamily="@font/alata"

            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_date"
            android:text="Account created : 22/22/22"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:padding="5dp"

            android:drawablePadding="15dp"
            android:textColor="@color/black"

            android:fontFamily="@font/alata"

            android:layout_marginLeft="20dp"/>





        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e0e0e0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center_horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/user_btn_delete"
                android:textStyle="bold"
                android:fontFamily="@font/alata"
                android:textColor="#FF0000"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_baseline_delete_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Block"
                android:id="@+id/user_btn_block"
                android:textStyle="bold"
                android:fontFamily="@font/alata"
                android:textColor="#FF0000"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/block"/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>